<fieldset id="order_summary" data-hook>
  <legend><%= Spree.t(:order_number, number: @order.number) %></legend>
  <h1><%= accurate_title %></h1>
  <% if order_just_completed?(@order) %>
    <strong><%= Spree.t(:thank_you_for_your_order) %></strong>
  <% end %>

  <div id="order" data-hook>
    <%= render partial: 'spree/shared/order_details', locals: { order: @order } %>

    <br class="clear" />

    <p data-hook="links">
      <div class="row">
          <div class ="col-md-3 col-md-offset-6">
          <%= link_to Spree.t(:back_to_store), spree.root_path, class: "continue btn btn-success btn-block" %>
          </div>
          <% unless order_just_completed?(@order) %>
            <% if try_spree_current_user && respond_to?(:account_path) %>
              <div class ="col-md-3">
              <%= link_to Spree.t(:my_account), spree.account_path, class: "continue btn btn-success btn-block" %>
              </div>
            <% end %>
          <% end %>
      </div>
    </p>
  </div>
</fieldset>
