

<!--  Fixed header bar -->

<div id="fixed-header">
  <div class="container">
    <div class="row header-container">
      <div class="col-md-12" data-hook"nav_left_part">



        <!--  Main navigation bar full width -->
        <div class="wide-nav nav-bar-center">
          <div class="row">

            <div class="wrapper-logo col-md-1 col-xs-2">
              <figure id="ir" data-hook><%= logo img_options: {class: 'img-responsive', width: '80'}%>
              </figure>
            </div>

            <div class="col-md-4 col-xs-10" data-hook"nav_center_part"> 

              <ul class="nav navbar-nav fixed-nav-center">
                <% @taxonomies.each do |taxonomy| %>
                <li class="dropdown fixed-menu-title">
                  <%= link_to '#', data: { toggle: "dropdown"}, "aria-haspopup" => 'true' do %>
                  <%= taxonomy.name.upcase%> <span class = 'caret'> </span>
                  <% end %>
                  <%= nav_tree(taxonomy.root, @taxon, 1) %>   
                </li>
                <% end %>
              </ul>   
            </div>

            <div class="col-md-4" data-hook"nav_right_part"> 
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>



