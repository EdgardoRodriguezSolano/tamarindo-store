
<div class="form-group">
    <%= f.email_field :email, class: 'title form-control', tabindex: 1, 
    autofocus: true, placeholder: "* "+Spree.t(:email)%>
</div>
<div id="password-credentials">
  <div class="form-group">

    <%= f.password_field :password, class: 'title form-control', tabindex: 1, 
    autofocus: true, placeholder: "* "+Spree.t(:password)%>
  </div>

  <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'title form-control', tabindex: 1, 
    autofocus: true, placeholder: "* "+Spree.t(:confirm_password)%>
  </div>
</div>

<div data-hook="signup_below_password_fields"></div>

