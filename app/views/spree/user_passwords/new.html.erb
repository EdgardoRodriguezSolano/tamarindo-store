<%= render partial: 'spree/shared/error_messages', locals: { target: @spree_user } %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div id="forgot-password" class= "panel">
      <div id="forgot-password">
        <div class="panel-heading">
          <%= Spree.t(:forgot_password) %>
        </div>

        <div class="panel-body">
          <p><%= Spree.t(:instructions_to_reset_password) %></p>

          <%= form_for Spree::User.new, as: :spree_user, url: spree.reset_password_path do |f| %>
          <div class = "form-group">
            <%= f.email_field :email, class: 'title form-control', tabindex: 1, autofocus: true, placeholder: "* "+Spree.t(:email)%>
          </div>
          <div class= "actions">
            <%= f.submit Spree.t(:reset_password), class: 'co-btn_primary btn-block' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
